{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "sh railway_start.sh",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 15,
    "healthcheckInterval": 45,
    "restartPolicyType": "ON-FAILURE",
    "restartPolicyMaxRetries": 10,
    "numReplicas": 1
  }
} 