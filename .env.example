# Environment variables for AllkindsTeamBot
# Copy this file to .env and fill in the values

# Database connection
DATABASE_URL=postgresql://username:password@localhost:5432/allkinds

# Main Telegram bot
BOT_TOKEN=123456789:your_bot_token_here

# Communicator bot
COMMUNICATOR_BOT_TOKEN=123456789:your_communicator_bot_token_here
COMMUNICATOR_BOT_USERNAME=AllkindsChat

# Admin users (comma-separated list of Telegram user IDs)
ADMIN_IDS=123456789,987654321

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_org_id_here

# Pinecone for vector search
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# Webhook configuration (optional)
USE_WEBHOOK=false
WEBHOOK_HOST=https://your-domain.com
WEBHOOK_PATH=/webhook
WEBHOOK_SSL_CERT=webhook_cert.pem
WEBHOOK_SSL_PRIV=webhook_pkey.pem
WEBAPP_HOST=0.0.0.0
WEBAPP_PORT=8080
